<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frankstiles.easyjournal.ViewDetails"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/vd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:background="@android:color/black"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vd_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toStartOf="@+id/vd_title_header"
        app:layout_constraintTop_toBottomOf="@+id/vd_title_header" />

    <TextView
        android:id="@+id/event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/lbl_event_description"
        android:textAllCaps="true"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vd_title_header"
        app:layout_constraintTop_toBottomOf="@+id/vd_time" />

    <TextView
        android:id="@+id/vd_description"
        android:layout_width="311dp"
        android:layout_height="37dp"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toStartOf="@+id/vd_title_header"
        app:layout_constraintTop_toBottomOf="@+id/event_description" />

    <TextView
        android:id="@+id/vd_title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/lbl_event_time"
        android:textAllCaps="true"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vd_title" />
</android.support.constraint.ConstraintLayout>
